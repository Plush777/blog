---
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) =>  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---
<section>
    <ul class="myPostList">
        {posts.map((post) => (
            <li>
                <a href={`/posts/${post.slug}/`} class="myPostLink">
                    <div class="myPostTop">
                        <img class="myPostThumbnail" width={720} height={360} src={post.data.heroImage} alt="" />
                    </div>

                    <div class="myPostBottom">
                        <h4 class="myPostTitle">{post.data.title}</h4>
                        <p class="myPostDescription">{post.data.description}</p>
                        <p class="myPostDate">
                            <FormattedDate date={post.data.pubDate} />
                        </p>
                    </div>
                </a>
            </li>
        ))}
    </ul>
</section>