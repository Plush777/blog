---
import FormattedDate from '../components/FormattedDate.astro';

const { decodeCategoryLastUrl, myCategory, categoryCountStore } = Astro.props;
---
<section class="categoryFilterSection">
    <div class="categoryArea">
        <h3 class="categoryTitle">{decodeCategoryLastUrl}&nbsp;관련 글</h3>
        <span class="categoryCount">{`총 ${categoryCountStore}개의 포스트가 있어요.`}</span>
    </div>
    <ul class="myPostList">
        {myCategory.map((post) => (
            <li>
                <a href={`/${post.slug}/`} class="myPostLink">
                    <div class="myPostTop">
                        <img class="myPostThumbnail" width={720} height={360} src={post.data.heroImage} alt="" />
                    </div>

                    <div class="myPostBottom">
                        <h4 class="myPostTitle">{post.data.title}</h4>
                        <p class="myPostDescription">{post.data.description}</p>
                        <p class="myPostDate">
                            <FormattedDate date={post.data.pubDate} />
                        </p>
                    </div>
                </a>
            </li>
        ))}
    </ul>
</section>