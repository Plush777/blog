---
import Link from './Link.astro';
import { SITE } from '../consts';
---

<footer id="footer">
	<div class="flex items-center w-full max-w-[1140px] m-[0_auto] p-[0_10px]">
		<span class="text-base text-black mr-auto max-[500px]:text-sm">&copy; {SITE.name}</span>

		<ul class="flex items-center gap-x-[30px] max-[500px]:gap-x-[20px]">
			<li>
				<Link href={SITE.github} className="text-base text-black max-[500px]:text-sm">Github</Link>
			</li>
			<li>
				<Link href={SITE.discord} className="text-base text-black max-[500px]:text-sm">Discord</Link
				>
			</li>
			<li>
				<Link href="/rss.xml" className="text-base text-black max-[500px]:text-sm">RSS</Link>
			</li>
		</ul>
	</div>
</footer>
