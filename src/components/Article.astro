---
import FormattedDate from './FormattedDate.astro';
const { title, pubDate, updatedDate, heroImage, category } = Astro.props;
---

<article class="article">
    <div class="heroImgArea">
        <div class="heroImgInner">
            {heroImage && <img class="heroImgItem" width={1020} height={510} src={heroImage} alt={title} />}

            <div class="heroImgBox">
                <div class="articleBox">
                    <span class="articleCategory">{category}</span>
                    <h1 class="articleTitle">{title}</h1>
                    <div class="articleDate">
                        <FormattedDate date={pubDate} />
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <div class="articleContainer">
        <slot />
        {
            updatedDate && (
                <div class="articleUpdated">
                    마지막 업데이트 : <FormattedDate date={updatedDate} />
                </div>
            )
        }
    </div>
</article>