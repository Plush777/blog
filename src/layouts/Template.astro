---
import TopButton from '../components/TopButton.astro';
import BaseHead from '../components/BaseHead.astro';
import Wrapper from './Wrapper.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE } from '../consts';

const { title, description } = Astro.props;
const conditionalTitle = title ? `${title} | ${SITE.title}` : SITE.title;

const baseHeadProps = {
    title: conditionalTitle,
	description,
}
---

<html lang="ko"> 
	<head>
		<BaseHead {...baseHeadProps}/>
	</head>
	<body>
		<Wrapper>
			<Header />
			<slot/>
			<TopButton/>
			<Footer />
		</Wrapper>

		<script is:inline>
		const wrap = document.getElementById('wrap');
		const pathname = location.pathname;

		if (pathname.includes('intro') || pathname.includes('about')){
			wrap.classList.add('postPage');
			wrap.classList.add('etc');
		} else if (pathname.includes('posts')) {
			wrap.classList.add('postPage');
		} else {
			wrap.classList.add('blogPage');
		}
		</script>
	</body>
</html>
